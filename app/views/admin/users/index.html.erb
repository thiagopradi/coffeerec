<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-white">Users</h1>
    <%= link_to "Add User", new_admin_user_path, class: "px-4 py-2 bg-blue-600 hover:bg-blue-500 text-white rounded-lg transition" %>
  </div>

  <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
    <table class="w-full">
      <thead class="bg-slate-700/50">
        <tr>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">ID</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Email</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Name</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Profile</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Created</th>
          <th class="px-6 py-4 text-right text-sm font-semibold text-slate-300">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-700">
        <% @users.each do |user| %>
          <tr class="hover:bg-slate-700/30 transition">
            <td class="px-6 py-4 text-slate-300"><%= user.id %></td>
            <td class="px-6 py-4 text-white font-medium"><%= user.email %></td>
            <td class="px-6 py-4 text-slate-300"><%= user.name || "—" %></td>
            <td class="px-6 py-4">
              <% if user.taste_profile %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-500/20 text-green-400">
                  ✓ Complete
                </span>
              <% else %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-500/20 text-slate-400">
                  No profile
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-slate-400 text-sm"><%= user.created_at.strftime("%b %d, %Y") %></td>
            <td class="px-6 py-4 text-right space-x-2">
              <%= link_to "View", admin_user_path(user), class: "text-blue-400 hover:text-blue-300" %>
              <%= link_to "Edit", edit_admin_user_path(user), class: "text-amber-400 hover:text-amber-300" %>
              <%= link_to "Delete", admin_user_path(user), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "text-red-400 hover:text-red-300" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @users.empty? %>
      <div class="px-6 py-12 text-center text-slate-400">
        No users yet. <%= link_to "Create the first one", new_admin_user_path, class: "text-blue-400 hover:text-blue-300" %>.
      </div>
    <% end %>
  </div>
</div>
