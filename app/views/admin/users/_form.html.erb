<%= form_with(model: [:admin, user], class: "space-y-6") do |f| %>
  <% if user.errors.any? %>
    <div class="p-4 bg-red-500/20 border border-red-500/50 rounded-lg">
      <h3 class="text-red-400 font-medium mb-2"><%= pluralize(user.errors.count, "error") %> prohibited saving:</h3>
      <ul class="list-disc list-inside text-red-300 text-sm">
        <% user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-slate-300 mb-2" %>
    <%= f.email_field :email, class: "w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "user@example.com" %>
  </div>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-slate-300 mb-2" %>
    <%= f.text_field :name, class: "w-full px-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-amber-500 focus:border-transparent", placeholder: "John Doe" %>
  </div>

  <div class="flex gap-3">
    <%= f.submit class: "px-6 py-3 bg-amber-600 hover:bg-amber-500 text-white font-medium rounded-lg transition cursor-pointer" %>
    <%= link_to "Cancel", admin_users_path, class: "px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition" %>
  </div>
<% end %>
