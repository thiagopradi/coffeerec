<div class="space-y-6">
  <h1 class="text-3xl font-bold text-white">Coffee Matches</h1>
  <p class="text-slate-400">Select a user to see their coffee recommendations based on their taste profile.</p>

  <div class="bg-slate-800 rounded-xl border border-slate-700 overflow-hidden">
    <table class="w-full">
      <thead class="bg-slate-700/50">
        <tr>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">User</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Email</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Brewing Method</th>
          <th class="px-6 py-4 text-left text-sm font-semibold text-slate-300">Adventure Level</th>
          <th class="px-6 py-4 text-right text-sm font-semibold text-slate-300">Action</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-700">
        <% @users.each do |user| %>
          <tr class="hover:bg-slate-700/30 transition">
            <td class="px-6 py-4 text-white font-medium"><%= user.name || "Anonymous" %></td>
            <td class="px-6 py-4 text-slate-300"><%= user.email %></td>
            <td class="px-6 py-4">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-500/20 text-amber-400">
                <%= user.taste_profile.brewing_method&.humanize %>
              </span>
            </td>
            <td class="px-6 py-4">
              <% adventure_colors = { "safe" => "bg-green-500/20 text-green-400", "moderate" => "bg-blue-500/20 text-blue-400", "wild" => "bg-purple-500/20 text-purple-400" } %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= adventure_colors[user.taste_profile.adventure_level] || 'bg-slate-600' %>">
                <%= user.taste_profile.adventure_level&.humanize %>
              </span>
            </td>
            <td class="px-6 py-4 text-right">
              <%= link_to "View Matches â†’", admin_match_path(user), class: "text-amber-400 hover:text-amber-300 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @users.empty? %>
      <div class="px-6 py-12 text-center text-slate-400">
        No users with taste profiles yet. Users need to complete the quiz first.
      </div>
    <% end %>
  </div>
</div>
